<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertia.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>


    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.05 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.075 0 0.1"/>
            <geometry>
                <box size="0.15 0.15 0.2"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.075 0 0.1"/>
            <geometry>
                <box size="0.15 0.15 0.2"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.8" x="0.15" y="0.15" z="0.3">
            <origin xyz="0.075 0 0.1" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
    <gazebo reference="chassis">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.065 0.085 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.02"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.035" length="0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.02" radius="0.035">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.065 -0.085 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.02"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.035" length="0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.02" radius="0.035">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- CASTER WHEEL LINK -->

    <joint name="caster_wheel_joint_cylinder" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_cylinder"/>
        <origin xyz="0.02 0 0"/>
    </joint>


    <link name="caster_wheel_cylinder">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.01" length="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.5" length="0.05" radius="0.01">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="caster_wheel_cylinder">
        <material>Gazebo/Black</material>
        
    </gazebo>

    <joint name="caster_wheel_joint_sphere" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_sphere"/>
        <origin xyz="0.02 0 -0.025"/>
    </joint>


    <link name="caster_wheel_sphere">
        <visual>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.5" radius="0.01">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel_sphere">
        <material>Gazebo/White</material>
        <mu1 value = "0.01"/>
        <mu2 value = "0.01"/>
    </gazebo>
    
    
</robot>